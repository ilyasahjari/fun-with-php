{% extends 'base.html.twig' %}

{% block title %}Lobby index{% endblock %}

{% block body %}
    <h1>Lobby index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lobby in lobbies %}
            <tr>
                <td>{{ lobby.id }}</td>
                <td>{{ lobby.name }}</td>
                <td>
                    <a href="{{ path('lobby_show', {'id': lobby.id}) }}">show</a>
                    <a href="{{ path('lobby_edit', {'id': lobby.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lobby_new') }}">Create new</a>
{% endblock %}
